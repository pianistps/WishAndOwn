
<h2> Sign in </h2>
<div class="form">
  <%= form_for(@user, url: sessions_path, method: 'post') do |f| %>

      <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>

    <%= f.label :email %>:
    <br>
    <%= f.text_field :email %>
    <br />
    <%= f.label :password %>:
    <br>
    <%= f.password_field :password %>
    <br></br>

    <%= f.submit "Sign In", :class => 'button' %>

  <% end %>
</div>
